    <ProgressBar
        android:id="@+id/up_magnitude"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="65"
        android:layout_above="@+id/left"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/circular_progress_bar" />

    <ProgressBar
        android:id="@+id/down_magnitude"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="65"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/left_magnitude"
        android:layout_below="@+id/left_magnitude"
        android:progressDrawable="@drawable/circular_progress_bar" />

    <ProgressBar
        android:id="@+id/left_magnitude"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="65"
        android:layout_toStartOf="@+id/up"
        android:layout_below="@+id/up_magnitude"
        android:progressDrawable="@drawable/circular_progress_bar" />

    <ProgressBar
        android:id="@+id/right_magnitude"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="100"
